<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    tools:context="projetaobcc20172.com.projetopetemfoco.activity.InfoServicoActivity">

    <include
        android:id="@+id/tb_main"
        layout="@layout/toolbar">

    </include>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:id="@+id/ivDetalhesServico"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvNomeFornecedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/tvTipoAnimalServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/tvValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" />

        <Button
            android:id="@+id/btnAgendaEstabelecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/shapebutton"
            android:paddingRight="40dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_action_check"
            android:text="Agenda do Estabelecimento"
            android:textAlignment="viewEnd"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/btnEstabelecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/shapebuttonborder"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_action_estabelecimentos"
            android:text="@string/botao_ver_estabelecimento"/>

        <Button
            android:id="@+id/btnAvaliarServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/shapebuttonborder"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_action_avaliar"
            android:text="@string/avaliar_servico"/>

        <Button
            android:id="@+id/btnAvaliacoesServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/shapebuttonborder"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_action_avaliacoes"
            android:text="@string/avaliacoes_do_servico"/>
    </LinearLayout>

</RelativeLayout>
