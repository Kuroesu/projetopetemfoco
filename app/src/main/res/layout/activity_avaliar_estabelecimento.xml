<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projetaobcc20172.com.projetopetemfoco.activity.AvaliarEstabelecimentoActivity">

    <include
        android:id="@+id/tb_avaliacao_estabelecimento"
        layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_avaliacao_estabelecimento"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNomeUsuarioAvaliador"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rbAvaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_gravity="center"
                android:stepSize="1.0"
                android:rating="2.0" />

            <TextView
                android:id="@+id/tvComentario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comentario"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="254dp">
            <EditText
                android:id="@+id/etComentarioAvaliacao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:background="@color/branco"
                android:lines="8"
                android:maxLines="12"
                android:minLines="12"
                android:hint="Digite seu comentÃ¡rio"/>
            </ScrollView>
            <Button
                android:id="@+id/botao_avaliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avaliar" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>